{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tracert",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "TraceRT",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "process-command-api": {
      "scope": [
        {
          "name": "tracert",
          "cmd": "tracert",
          "args": true
        },
        {
          "name": "traceroute",
          "cmd": "traceroute",
          "args": true
        },
        {
          "name": "tracepath",
          "cmd": "tracepath",
          "args": true
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
